@model VMPatient
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Body{
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-1">Name</div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" asp-for="patient.Name" />
                </div>
            </div>

            <div class="row">
                <div class="col-lg-1">Bate</div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" asp-for="patient.BDate" />
                </div>
            </div>

            <div class="row">
                <div class="col-lg-1"> Country </div>
                <div class="col-lg-4">
                    <select asp-items='new SelectList(Model.licountry,"ID","Name")' asp-for="patient.Country_id"></select>
                </div>
            </div>

            <div class="row">
                <input type="radio" value="Male" asp-for="patient.gender" /> Male
                <input type="radio" value="Female" asp-for="patient.gender" /> Female

            </div>

            <div class="row">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="SaveDate" />
            </div>
        </div>
    </form>
}
