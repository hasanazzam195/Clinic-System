@model VMCountry
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Body {
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-1">
                    Name
                </div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" name="TxtSearchCountry" />
                </div>
                <div class="col-lg-2">
                    <input type="submit" value="Search" class="btn btn-primary" asp-action="SearchDate" />
                </div>
            </div>

            <div class="row">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th> Code </th>
                            <th> Name </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Country item in Model.licountry)
                        {
                            <tr>
                                <td>
                                    @item.code
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-1"> Code </div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" asp-for="country.code" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-1"> Name </div>
                <div class="col-lg-4">
                    <input type="text" class="form-control" asp-for="country.Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">
                    <input type="submit" value="Save" class="btn btn-primary" asp-action="SaveData" />
                </div>
            </div>
        </div>
    </form>

}

